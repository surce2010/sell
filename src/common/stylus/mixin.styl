border-1px($color)
    position relative
    &::after
        content ''
        position absolute
        left 0
        bottom 0
        display block
        width 100%
        border-top 1px solid $color

border-none()
    position relative
    &::after
        border-top none

bg-image($name)
    background-image url($name + '@2x.png')
    @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
        background-image url($name + '@3x.png')
